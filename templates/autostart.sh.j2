xset s off      # don't activate screensaver
xset -dpms      # disable DPMS (Energy Star) features
xset s noblank  # don't blank the video device
unclutter &     # hide cursor when idle
hsetroot -center ~/background.png
setxkbmap {{ xkeyboardlayout }}
sed -i 's/"exited_cleanly":false/"exited_cleanly":true/' ~/.config/chromium/Default/Preferences
sed -i 's/"exit_type":"Crashed"/"exit_type":"Normal"/' ~/.config/chromium/Default/Preferences
chromium-browser --start-maximized --start-fullscreen --disable-translate --disable-infobars --disable-suggestions-service --allow-file-access-from-files {{ chrome_url }} &
x11vnc -localhost -ncache 10 -forever -rfbauth ~/.x11vnc/passwd -display :0 &
